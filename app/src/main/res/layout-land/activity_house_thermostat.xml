<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ListView
        android:id="@+id/listView_HouseThermostat"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/textView_HouseThermostat"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/textView_HouseThermostat"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_above="@+id/button_HouseThermostat"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edittext_Week_HouseThermostat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:inputType="text" />

        <EditText
            android:id="@+id/edittext_Time_HouseThermostat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:inputType="time" />

        <EditText
            android:id="@+id/edittext_TempWord_HouseThermostat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text=" Temp -> " />

        <EditText
            android:id="@+id/edittext_Temp_HouseThermostat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_HouseThermostat"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:gravity="bottom|center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addButton_HouseThermostat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add_HouseThermostat" />

        <Button
            android:id="@+id/editButton_HouseThermostat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/edit_HouseThermostat" />

        <Button
            android:id="@+id/saveButton_HouseThermostat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/save_HouseThermostat" />

        <Button
            android:id="@+id/deleteButton_HouseThermostat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/delete_HouseThermostat" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/listView_HouseThermostat"


        android:layout_alignParentTop="true"
        android:id="@+id/frameLayout_houseThermostat"
        />

</RelativeLayout>
